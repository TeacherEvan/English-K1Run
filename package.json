{
  "name": "kindergarten-race-game",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "kill": "fuser -k 5000/tcp",
    "build": "tsc -b && vite build",
    "check-types": "tsc -b --noCheck",
    "lint": "eslint .",
    "verify": "npm run lint && npm run build",
    "audio:list-voices": "node scripts/list-elevenlabs-voices.cjs",
    "audio:validate": "node scripts/validate-audio-files.cjs",
    "audio:generate": "node scripts/generate-sentence-audio.cjs",
    "audio:generate-welcome": "node scripts/generate-missing-welcome-audio.cjs",
    "audio:generate-welcome-hf": "node scripts/generate-welcome-audio-hf.cjs",
    "requirements": "node scripts/generate-requirements.cjs",
    "requirements:json": "node scripts/generate-requirements.cjs --format json",
    "requirements:md": "node scripts/generate-requirements.cjs --format markdown",
    "optimize": "vite optimize",
    "preview": "vite preview",
    "install:android": "npm install",
    "install:safe": "npm install --no-optional",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:allure": "allure generate allure-results --clean && allure open",
    "dashboard:server": "node dashboard-server.js",
    "dashboard:ui": "cd dashboard-ui && npm start",
    "dashboard": "concurrently \"npm run dashboard:server\" \"npm run dashboard:ui\""
  },
  "dependencies": {
    "@radix-ui/react-aspect-ratio": "^1.1.2",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toggle": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tailwindcss/vite": "^4.1.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.6",
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "express": "^5.2.1",
    "i18next": "^25.7.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^6.0.0",
    "react-i18next": "^16.5.3",
    "tailwind-merge": "^3.0.2",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^24.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "3.2.4",
    "allure-playwright": "^3.4.5",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^17.3.0",
    "jsdom": "^27.2.0",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.1.12",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "3.2.4"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
