{
    "buildCommand": "npm install --legacy-peer-deps && npm run build",
    "installCommand": "npm install --legacy-peer-deps",
    "headers": [
        {
            "source": "/assets/(.*).wav",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "audio/wav"
                },
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                }
            ]
        },
        {
            "source": "/assets/(.*).mp3",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "audio/mpeg"
                },
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ]
}